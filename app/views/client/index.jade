extends /layouts/client

block content

    div#login
        div.window
            h1 Bienvenido a
                span.title SocialCenter
            div.alert.alert-danger.text-center No has realizado la identificación correctamente. Prueba de nuevo.
            div.alert.alert-warning.text-center Se ha identificado otro usuario. Espera a que termine su sesión.
                button#logout.btn.btn-warning(type="button") Salir espera
            div.alert.alert-success.text-center Puedes intentar identificarte en la aplicación.
            div.alert.alert-info.text-center Ha salido de la aplicación. Recarga la página para poder identificarte.
                button.btn.btn-info(type="button", onclick="location.reload();") Recargar

        button.btn.btn-primary.btn-lg.sendmsg(data-target='#modalMensajes', data-toggle='modal')
              | Enviar Mensaje
            // Modal


    div.buttons.text-center
        div.btn-group
            button#home.btn.btn-warning(type="button") <i class="fa fa-home"></i> Inicio
            button#goback.btn.btn-warning(type="button") <i class="fa fa-undo"></i> Volver
            button#logout.btn.btn-warning(type="button") Salir
        div.clearfix
        div.btn-group
            button#left.btn.btn-primary.btn-lg.btn-success(type="button") <i class="fa fa-arrow-left"></i>
            button#ok.btn.btn-primary.btn-lg.btn-danger(type="button") OK
            button#right.btn.btn-primary.btn-lg.btn-success(type="button") <i class="fa fa-arrow-right"></i>
        div.btn-group
            button.sendmsg.btn.btn-primary.btn-lg.btn-success(data-target='#modalMensajes', data-toggle='modal') Enviar
            button#messages.btn.btn-primary.btn-lg.btn-success(type="button") Bandeja
            button#changeMask.btn.btn-primary.btn-lg.btn-sucess(type="button") Barra
        div.btn-group
            button#appmsgs.btn.btn-primary.btn-lg.btn-success(type="button") Ocultar
            button#allmsgs.btn.btn-primary.btn-lg.btn-success(type="button") Todos

    // Modal
    #modalMensajes.modal.fade(aria-hidden='true', aria-labelledby='myModalLabel', role='dialog', tabindex='-1')
        .modal-dialog
            .modal-content
                .modal-header
                    button.close(aria-hidden='true', data-dismiss='modal', type='button') ×
                    h4#myModalLabel.modal-title Enviar mensaje
                .modal-body
                    form(method='GET', action='', role='form')
                      .form-group
                        label.control-label(for='textoMensaje') Texto
                        input#textoMensaje.form-control(type='text', placeholder='Introduce el texto', name='texto')
                      .form-group
                        label(for='caducidadMensaje') Caducidad (horas)
                        input#caducidadMensaje.form-control(type='text', value='24', data-slider-value='24', data-slider-step='12', data-slider-max='800', data-slider-min='0', data-slider-id='ex1Slider', name='expiracion')
                        p#ex6CurrentSliderValLabel.help-block
                          | Caducidad seleccionada en días:
                          span#ex6SliderVal 1


                .modal-footer
                    button.btn.btn-default(data-dismiss='modal', type='button') Close
                    button.btn.btn-primary.sendmsgok(type='button') Save changes

